<html lang="en">
<%- include ('partials/header.ejs') -%>
<body class="text-center">
   <div class="container-fluid">
     <div class="row">
       <div class="col-8 offset-2">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/search">Search</a></li>
            <li class="breadcrumb-item"><a href="/shelf/add">Add Shelf</a></li>   
            <li class="breadcrumb-item"><a href="/bundle/add">Add Bundle</a></li>
            <li class="breadcrumb-item"><a href="/bundle/all">All Bundle</a></li>
                
                <!-- <li class="breadcrumb-item"><a href="shelf">Single Shelf</a></li> -->
                <!-- <li class="breadcrumb-item"><a href="shelves">Kanban System</a></li> -->
          </ol>
        </nav>
       </div>
      </div>
      <div class="row">
        <div class="col-4 offset-4">
          <% if (messages.error) { %>
            <p style="color:red"><%- messages.error %></p>
          <% } %> 
            
          <% if (messages.success) { %>
              <p class="alert alert-success mt-4"><%- messages.success %></p>
          <% } %>  
        </div>
      </div>
       <div class="row">
        <div class="col-8 offset-2">
          <form class="form-signin" action="/shelf/add" method="POST">
            <h2>Kanban System</h2>
            <span><b><p>Add Shelf</p></b></span>
              <!-- <label for="RfidTag" class="sr-only">RFID Tag No:</label> -->
              <input type="text" id="rfidShelf" name="rfidShelf" class="form-control" placeholder="Scan RFID Tag" required="">
              
              <!-- <label for="shelf_name">Shelf Name:</label> -->
              <input type="text" id="shelfName" name="shelfName" class="form-control" placeholder="Write a shelf name" required="">
              
              <br>
              <button class="btn btn-lg btn-primary btn-block" type="submit">Create</button>
          </form>
         </div>
       </div>
     
   </div> 
</body>
</html>


